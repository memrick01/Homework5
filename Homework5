def steps_jan(fp):
    total_jan = 0
    for line in fp:
        toks = line.split(",")
        month = toks[0]
        jan_steps = int(toks[1])
        if month == "Jan":
            total_jan = total_jan + jan_steps
        jan_average = total_jan / 29
        return jan_average, total_jan
    
