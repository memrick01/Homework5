def main(total_jan, jan_average, total_feb, feb_average, total_mar, mar_average, total_apr, apr_average, total_may, may_average, total_jun, jun_average, total_jul, jul_average, total_aug, aug_average, total_sep, sep_average, total_oct, oct_average, total_nov, nov_average, total_dec, dec_average,):
    fp = open("data.txt", "r")
    steps_jan(fp) 
    steps_feb(fp)
    steps_mar(fp)
    steps_apr(fp)
    steps_may(fp)
    steps_jun(fp)
    steps_jul(fp)
    steps_aug(fp)
    steps_sep(fp)
    steps_oct(fp)
    steps_nov(fp)
    steps_dec(fp)
    total_steps = total_apr, total_aug, total_dec, total_feb, total_jan, total_jul, total_jun, total_mar, total_may, total_nov, total_oct, total_sep
    daily_average = total_steps / 365
    print(f"Average steps for month:\n Jan: {jan_average} \n Feb: {feb_average} \n Mar: {mar_average} \n Mar: {mar_average} \n Apr: {apr_average} \n May: {may_average} \n Jun: {jun_average} \n Jul: {jul_average} \n Aug: {aug_average} \n Sep: {sep_average} \n Oct: {oct_average} \n Nov: {nov_average}\n Dec: {dec_average}")
    print(f"Average daily steps:{daily_average}")
    
main(total_jan, jan_average, total_feb, feb_average, total_mar, mar_average, total_apr, apr_average, total_may, may_average, total_jun, jun_average, total_jul, jul_average, total_aug, aug_average, total_sep, sep_average, total_oct, oct_average, total_nov, nov_average, total_dec, dec_average)
        
    
